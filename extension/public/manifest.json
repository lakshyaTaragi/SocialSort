{
    "name": "SocialSort",
    "version": "1.0.0",
    "description": "Sort and organize saved social media posts",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "webRequest",
        "webNavigation"
    ],
    "host_permissions": [
        "*://*.youtube.com/youtubei/v1/next*",
        "*://*.reddit.com/svc/shreddit/graphql",
        "*://x.com/i/api/graphql/*/*Bookmark"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.instagram.com/*"
            ],
            "js": [
                "./assets/instagramContentScript.js"
            ]
        },
        {
            "matches": [
                "*://*.x.com/*"
            ],
            "js": [
                "./assets/twitterContentScript.js"
            ]
        },
        {
            "matches": [
                "*://*.youtube.com/shorts/*",
                "*://*.youtube.com/watch*"
            ],
            "js": [
                "./assets/youtubeContentScript.js"
            ]
        }
    ],
    "background": {
        "service_worker": "./assets/background.js",
        "type": "module"
    },
    "manifest_version": 3
}