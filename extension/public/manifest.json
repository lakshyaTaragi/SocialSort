{
    "name": "Organize-O-Save",
    "version": "1.0.0",
    "description": "Organize saved social media posts",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "webRequest"
    ],
    "host_permissions": [
        "*://*.instagram.com/api/graphql/*",
        "*://*.instagram.com/api/v1/web/save/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.instagram.com/*"
            ],
            "js": [
                "./assets/InstagramContentScript.js"
            ]
        }
    ],
    "background": {
        "service_worker": "./assets/instagramServiceWorker.js"
    },
    "manifest_version": 3
}