{
    "name": "Organize-O-Save",
    "version": "1.0.0",
    "description": "Organize saved social media posts",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "webRequest",
        "webNavigation"
    ],
    "host_permissions": [
        "*://*.instagram.com/api/graphql/*",
        "*://*.instagram.com/api/v1/web/save/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.instagram.com/*"
            ],
            "js": [
                "./assets/instagramContentScript.js"
            ]
        },
        {
            "matches": [
                "*://*.reddit.com/*"
            ],
            "js": [
                "./assets/RedditContentScript.js"
            ]
        },
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "./assets/YoutubeContentScript.js"
            ]
        }
    ],
    "background": {
        "service_worker": "./assets/background.js",
        "type": "module"
    },
    "manifest_version": 3
}