{
    "name": "Organize-O-Save",
    "version": "1.0.0",
    "description": "Organize saved social media posts",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.instagram.com/*"
            ],
            "js": [
                "./assets/InstagramContentScript.js"
            ]
        },
        {
            "matches": [
                "*://*.reddit.com/*"
            ],
            "js": [
                "./assets/RedditContentScript.js"
            ]
        }
    ],
    "background": {
        "service_worker": "./assets/youtubeServiceWorker.js"
    },
    "manifest_version": 3
}